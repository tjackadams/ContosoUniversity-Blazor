@page "/departments/delete/{Id:int}"
@namespace ContosoUniversity.Client.Pages.Departments

<ContosoSpinLoader IsLoading="@(Data == null)">
    <ContentTemplate>
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Department</h4>
            <hr/>
            <dl class="row">
                <dt class="col-sm-3">
                    <Label For="() => Data.Name"></Label>
                </dt>
                <dd class="col-sm-9">
                    <Display For="() => Data.Name"/>
                </dd>
                <dt class="col-sm-3">
                    <Label For="() => Data.Budget"></Label>
                </dt>
                <dd class="col-sm-9">
                    <Display For="() => Data.Budget" />
                </dd>
                <dt class="col-sm-3">
                    <Label For="() => Data.StartDate"></Label>
                </dt>
                <dd class="col-sm-9">
                    <Display For="() => Data.StartDate" />
                </dd>
                <dt class="col-sm-3">
                    <Label class="text-right" For="() => Data.AdministratorFullName"></Label>
                </dt>
                <dd class="col-sm-9">
                    <Display For="() => Data.AdministratorFullName" />
                </dd>
            </dl>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger" @onclick="OnClickAsync">Delete</button> |
            <a href="departments">Back to List</a>
        </div>
    </ContentTemplate>
</ContosoSpinLoader>